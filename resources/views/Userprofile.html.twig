{% extends 'base.html.twig' %}{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}  
<div class="container column is-8">
  <section class="section">
    <h2 class="title" id="titles">Bienvenue {{app.user.username}}</h2>
      <section class="section">
      <div class="container column is-6" id="moodsection">
    <p id="texte" class="has-text-centered">Aujourd'hui vous êtes content!</p>
    <div id="lien">
      <p>Peut-être voudrez vous jeter un oeil a notre article sur la <a href="/trait/Depression">depression</a>
      </p></div>
  <div class="has-text-centered">
    <img id="img" src="{{ asset('asset/img/content.png') }}">
    </div>
    <div class="has-text-centered">
    <button id="mood" class="button is-link">non, pas content!
    </button>
  </div>
  
</div>
</section>
    <div class="box has-background-link">
      <div class="box">
        <div class="container column is-4">
          <section class="section">
            <h3 class="title" id="titles">Profil</h3>
          </section>
          {{ form_start(form, { 'attr': {'action': path('user_profile', { 'user': app.user.id })} }) }}
          {{ form_row(form.Username) }}
          {{ form_widget(form.Username, { 'attr': {'class': "input"} }) }}
          {{ form_row(form.mail) }}
          {{ form_widget(form.mail, { 'attr': {'class': "input"} }) }}
          {{ form_row(form.password) }}
          {{ form_widget(form.password, { 'attr': {'class': "input"} }) }}
          {{ form_row(form.password1) }}
          {{ form_widget(form.password1, { 'attr': {'class': "input"} }) }}
          {{ form_widget(form.submit, { 'attr': {'class': "button is-link"} }) }}
          {{ form_end(form) }}{{message}}
        </div>
      </div>
    </div>
  </section>
     
  <section class="section">
    <h2 class="title" id="titles">Historique des commentaires</h2>
    <div class="box has-background-link">
      {% for comment in comments|sort|reverse(true) %} 
      <div class="box">
        <strong id="comment_title">Sur "{{comment.article}}"</strong>
        <p>
          le {{comment.date}}
        </p>
        <p id="comments">
           {{ comment.content|nl2br }} 
        </p>
      </div>
        {% endfor %}
      <div class="navigation text-center" id="pagi">
        {{ knp_pagination_render(comments) }}
      </div>
    </div>
  </section>
          <div class="container column is-4">
          <section class="section">
             <h2 id="titles"><a href="{{ path('delete') }}"><button class="button is-link"> Supprimer votre compte</button></a></h2>
          </section>
        </div>
  {% else %}
  Vous N'avez pas accès a cette page
  {% endif %}
  </div>
{% endblock %}

